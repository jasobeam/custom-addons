<odoo>
    <!-- ====================================================== -->
    <!-- Formulario Principal-->
    <!-- ====================================================== -->
    <!-- âœ… Vista de bÃºsqueda corregida -->
    <record id="view_gl_contenido_flujo_search" model="ir.ui.view">
        <field name="name">gl.contenido.flujo.search</field>
        <field name="model">gl.contenido.flujo</field>
        <field name="arch" type="xml">
            <search string="Buscar Flujos de Contenido">

                <!-- ðŸ”Ž Campos principales -->
                <field name="name" string="Nombre del Flujo"/>
                <field name="partner_id" string="Cliente"/>
                <field name="project_id" string="Proyecto"/>

                <!-- ðŸ”¹ Filtros rÃ¡pidos -->
                <filter name="filter_ideas"
                        string="En Ideas"
                        domain="[('etapa','=','ideas')]"
                        help="Mostrar solo flujos en etapa de creaciÃ³n de ideas"/>
                <filter name="filter_reunion"
                        string="ReuniÃ³n con Cliente"
                        domain="[('etapa','=','reunion')]"/>
                <filter name="filter_refinar"
                        string="Refinamiento"
                        domain="[('etapa','=','refinar')]"/>
                <filter name="filter_publicaciones"
                        string="Publicaciones"
                        domain="[('etapa','=','publicaciones')]"/>

                <!-- ðŸ”¹ Agrupar por -->
                <group string="Agrupar por">
                    <filter name="group_etapa"
                            string="Etapa"
                            context="{'group_by': 'etapa'}"/>
                    <filter name="group_partner"
                            string="Cliente"
                            context="{'group_by': 'partner_id'}"/>
                    <filter name="group_project"
                            string="Proyecto"
                            context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- âœ… AcciÃ³n principal -->
    <record id="action_gl_contenido_flujo" model="ir.actions.act_window">
        <field name="name">Flujo de Contenido</field>
        <field name="res_model">gl.contenido.flujo</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_gl_contenido_flujo_search"/>
    </record>

    <!-- Vista Kanban -->
    <record id="view_gl_contenido_flujo_kanban" model="ir.ui.view">
        <field name="name">gl.contenido.flujo.kanban</field>
        <field name="model">gl.contenido.flujo</field>
        <field name="arch" type="xml">

            <kanban default_group_by="etapa"
                    class="o_kanban_small_column"
                    group_disable_drag="true"
                    disable_drag="true">
                <field name="partner_id"/>
                <field name="etapa"/>
                <field name="notas"/>
                <templates>
                    <t t-name="card" class="mb-2">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <!-- ðŸ”¹ TÃ­tulo principal destacado -->
                            <div class="o_kanban_primary_left">
                                <strong class="o_kanban_record_title" style="font-size:16px; color:#2C3E50;">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted" style="font-size:13px;">
                                    <field name="partner_id"/>
                                </div>
                            </div>

                            <!-- ðŸ”¹ LÃ­nea inferior informativa -->
                            <div class="o_kanban_secondary_bottom mt8" style="font-size:12px;">
                                <span>
                                    <b>Proyecto:</b>
                                    <field name="project_id" placeholder="â€”"/>
                                </span>
                                <br/>
                                <span>
                                    <b>OrientaciÃ³n:</b>
                                    <field name="orientacion_comunicacion" placeholder="â€”"/>
                                </span>
                                <br/>
                                <span>
                                    <b>Tono:</b>
                                    <field name="tono_comunicacion" placeholder="â€”"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_gl_contenido_flujo_form" model="ir.ui.view">
        <field name="name">gl.contenido.flujo.form</field>
        <field name="model">gl.contenido.flujo</field>
        <field name="arch" type="xml">
            <form string="Flujo del Generador de Contenido">
                <header>
                    <field name="etapa" widget="statusbar"
                           statusbar_visible="ideas,reunion,refinar,publicaciones"/>

                    <!-- Botones principales -->
                    <div class="oe_button_box">
                        <button name="previous_stage"
                                type="object"
                                string="Volver"
                                class="btn-secondary"
                                invisible="etapa == 'ideas'"/>
                        <button name="crear_ideas"
                                type="object"
                                string="Generar Propuestas de Contenido"
                                class="btn-primary"
                                invisible="etapa != 'ideas'"/>
                        <button name="refinar_propuestas"
                                type="object"
                                string="Refinar Propuestas"
                                class="btn-primary"
                                invisible="etapa != 'reunion'"/>
                        <button name="generar_tareas"
                                type="object"
                                string="Generar Tareas"
                                class="btn-primary"
                                invisible="etapa != 'refinar'"/>
                    </div>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name" class="o_form_label"/>
                        <h1>
                            <field name="name" class="o_field_title"/>
                        </h1>
                    </div>
                    <!-- ðŸ”¹ Grupo principal con 2 columnas -->
                    <group col="2">
                        <!-- Columna izquierda -->
                        <group>
                            <field name="partner_id"/>
                            <field name="project_id"/>
                            <field name="etapa" invisible="1"/>
                            <field name="redes_ids" widget="many2many_tags"/>
                        </group>

                        <!-- Columna derecha -->
                        <group>
                            <field name="date_start"
                                   string="PerÃ­odo"
                                   widget="daterange"
                                   options="{'end_date_field': 'date', 'always_range': 1}"
                                   required="date_start or date"/>
                            <field name="date" invisible="1" required="date_start"/>
                            <field name="plan_cliente" readonly="1"/>
                            <field name="plan_post" readonly="1"/>
                            <field name="plan_historia" readonly="1"/>
                            <field name="plan_reel" readonly="1"/>
                        </group>
                    </group>
                    <!-- ðŸŸ© Etapa: Ideas -->
                    <notebook invisible="etapa != 'ideas'">
                        <page string="Perfil Comunicacional">
                            <group col="2">
                                <group>
                                    <field name="notas"/>
                                    <field name="industria"/>
                                    <field name="orientacion_comunicacion"/>
                                    <field name="tono_comunicacion"/>
                                    <field name="usar"/>
                                    <field name="evitar"/>
                                    <field name="competencia_urls"/>
                                    <field name="tendencias_urls"/>
                                    <field name="publico_objetivo"/>

                                    <field name="dias_festivos_referencia" colspan="1"/>
                                    <button name="sugerir_dias_festivos"
                                            type="object"
                                            string="Sugerir Festivos"
                                            class="btn-secondary"
                                            icon="fa-calendar-o"/>

                                    <button name="generate_prompt"
                                            type="object"
                                            string="Generar Prompt"
                                            class="btn-primary"
                                            icon="fa-android"/>
                                </group>
                                <group>
                                    <field name="metricas"/>
                                </group>
                            </group>

                        </page>

                        <page string="Prompt para IA">
                            <group>
                                <field name="promtp_ideas"/>

                            </group>
                        </page>
                        <page string="Propuestas de IA">
                            <group>
                                <field name="promtp_respuesta"/>

                            </group>
                        </page>
                    </notebook>

                    <!-- ðŸŸ¦ Etapa: ReuniÃ³n -->
                    <notebook invisible="etapa != 'reunion'">
                        <page string="ReuniÃ³n con Cliente">
                            <group>
                                <field name="feedback_cliente"/>
                                <field name="anotaciones_cliente"/>
                                <field name="publicacion_ids"/>
                                <button name="ver_calendario"
                                        type="object"
                                        string="Ver Calendario"
                                        class="btn-secondary"
                                        icon="fa-calendar"/>
                                <button name="refinar_propuestas"
                                        type="object"
                                        string="Generar Prompt"
                                        class="btn-primary"
                                        icon="fa-wrench"/>
                                <button name="aceptar_refinamiento"
                                        type="object"
                                        string="Aplicar Cambios"
                                        class="btn-success"
                                        icon="fa-check"/>

                            </group>
                        </page>
                        <page string="Prompt de Refinamiento">
                            <group>
                                <field name="promtp_refinamiento"/>

                            </group>
                        </page>
                        <page string="Respuesta IA de Refinamiento">
                            <group>
                                <field name="promtp_respuesta_refinamiento"/>

                            </group>
                        </page>

                    </notebook>

                    <!-- ðŸŸ§ Etapa: Refinamiento -->
                    <group string="Refinamiento" invisible="etapa != 'refinar'">
                        <field name="publicacion_ids" create="false"/>
                        <button name="ver_calendario"
                                type="object"
                                string="Ver Calendario"
                                class="btn-secondary"
                                icon="fa-calendar"/>

                    </group>

                    <!-- ðŸŸ¥ Etapa: Publicaciones -->
                    <group string="Publicaciones" invisible="etapa != 'publicaciones'">
                        <div style="text-align:center;padding:50px;">
                            <h2 style="font-weight:600; color:#2c3e50; margin-bottom:12px;">
                                ðŸŽ¯ El proceso de generaciÃ³n de contenido ha concluido
                            </h2>
                            <p style="font-size:15px; color:#6c757d; margin-bottom:25px;">
                                Todas las ideas y publicaciones han sido generadas con Ã©xito.
                                Puedes revisar las tareas creadas dentro del proyecto asignado.
                            </p>

                            <button type="action"
                                    name="%(project.action_view_task)d"
                                    context="{'search_default_project_id': project_id, 'default_project_id': project_id}"
                                    class="btn btn-primary btn-lg"
                                    style="padding:14px 35px; font-size:16px; border-radius:8px;">ðŸ”— Ver proyecto
                            </button>

                        </div>
                    </group>

                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista Ã¡rbol -->
    <record id="view_gl_contenido_flujo_tree" model="ir.ui.view">
        <field name="name">gl.contenido.flujo.list</field>
        <field name="model">gl.contenido.flujo</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
                <field name="etapa"/>
            </list>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_gl_contenido_flujo" model="ir.actions.act_window">
        <field name="name">Flujo de Contenido</field>
        <field name="res_model">gl.contenido.flujo</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- MenÃº dentro de Project -->
    <menuitem id="menu_gl_contenido_flujo"
              name="Creador de Contenido"
              parent="project.menu_main_pm"
              sequence="50"
              action="action_gl_contenido_flujo"/>
    <!-- ====================================================== -->
    <!-- TREE VIEW (Lista de Propuestas generadas desde IA)     -->
    <!-- ====================================================== -->
    <record id="view_gl_contenido_propuesta_list" model="ir.ui.view">
        <field name="name">gl.contenido.propuesta.list</field>
        <field name="model">gl.contenido.propuesta</field>
        <field name="arch" type="xml">
            <list string="Propuestas de Contenido" create="true">
                <field name="titulo"/>
                <field name="tipo"/>
                <field name="fecha_publicacion"/>
                <field name="aprobado"/>
            </list>
        </field>
    </record>

    <!-- ====================================================== -->
    <!-- FORM VIEW (Detalle de la Propuesta generada desde IA)  -->
    <!-- ====================================================== -->
    <record id="view_gl_contenido_propuesta_form" model="ir.ui.view">
        <field name="name">gl.contenido.propuesta.form</field>
        <field name="model">gl.contenido.propuesta</field>
        <field name="arch" type="xml">
            <form string="Propuesta de Contenido" class="o_form_sheet">
                <!-- Ribbon condicional de aprobaciÃ³n -->
                <widget name="web_ribbon"
                        title="Aprobado"
                        bg_color="text-bg-success"
                        invisible="not aprobado"/>

                <sheet>
                    <group>
                        <field name="titulo"/>
                        <field name="tipo"/>
                        <field name="fecha_publicacion"/>
                        <field name="flujo_id" readonly="1"/>
                        <field name="aprobado" widget="boolean_toggle"/>
                    </group>

                    <notebook>
                        <page string="Contenido de la PublicaciÃ³n">
                            <group col="2">
                                <field name="descripcion" colspan="2"/>
                                <field name="texto_en_diseno"/>
                                <field name="copy" colspan="2"/>
                                <field name="hashtags" colspan="2"/>
                                <field name="recomendaciones" colspan="2"/>
                            </group>
                        </page><page string="Cambios Solicitados">
                            <group col="2">
                                <field name="cambios" colspan="2"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- ====================================================== -->
    <!-- CALENDAR VIEW (Detalle de la Propuesta generada desde IA)  -->
    <!-- ====================================================== -->
    <record id="view_gl_contenido_propuesta_calendar" model="ir.ui.view">
        <field name="name">gl.contenido.propuesta.calendar</field>
        <field name="model">gl.contenido.propuesta</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Propuestas"
                      date_start="fecha_publicacion"
                      date_stop="fecha_publicacion"
                      color="tipo"
                      mode="month"
                      event_open_popup="false">
                <field name="titulo"/>
                <field name="tipo"/>
                <field name="texto_en_diseno"/>
                <field name="copy"/>
                <field name="recomendaciones"/>
                <field name="cambios"/>
                <field name="aprobado"/>
            </calendar>
        </field>
    </record>
    <record id="action_gl_contenido_propuesta_calendar" model="ir.actions.act_window">
        <field name="name">Calendario de Propuestas</field>
        <field name="res_model">gl.contenido.propuesta</field>
        <field name="view_mode">calendar,form</field>
        <field name="view_id" ref="view_gl_contenido_propuesta_calendar"/>
    </record>
</odoo>
