<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- üëá PLANTILLA NUEVA INDEPENDIENTE -->
        <template id="portal_project_calendar_page" name="Portal Project Calendar Page" priority="20">
    <t t-call="portal.portal_layout">
        <t t-set="title" t-value="'Calendario de Tareas'"/>

        <div class="container mt-4">
            <h2>Calendario de Tareas</h2>

            <div class="alert alert-info">
                <p><strong>Proyecto:</strong> <t t-esc="project.name"/> (ID: <t t-esc="project.id"/>)</p>
            </div>

            <div id="calendar_status" class="alert alert-secondary">
                üîÑ Inicializando calendario...
            </div>

            <div class="card">
                <div class="card-body">
                    <div id="task_calendar" t-att-data-project-id="project.id" style="min-height: 600px;"></div>
                </div>
            </div>

            <!-- Leyenda de colores -->
            <div class="mt-3">
                <small class="text-muted">
                    <strong>Leyenda:</strong>
                    <span style="color: #6c757d">‚óè Borrador</span> |
                    <span style="color: #17a2b8">‚óè Programado</span> |
                    <span style="color: #28a745">‚óè Publicado</span> |
                    <span style="color: #ffc107">‚óè Completado</span> |
                    <span style="color: #dc3545">‚óè Cancelado</span>
                </small>
            </div>
        </div>

        <style>
            .fc-event {
                cursor: pointer;
                border: none;
                font-size: 0.8em;
                padding: 2px 4px;
            }
            .fc-day-today {
                background-color: #f8f9fa !important;
            }
        </style>
    </t>
</template>


    </data>
</odoo>